@{
    ViewData["Title"] = "Home Page";
}
<script src="~/js/dashboard.js"></script>

<div class=" mb-2" >
  <div ng-controller="dashboardController">

    <div id="listView"></div>







    <div id="dashboard" class="row">
      <div class="column  border border-primary category" ng-repeat="cat in categories">
        <h2 class="text-center">{{cat.name}}</h2>

        <div kendo-sortable kendo-list-view data-k-options="listOptions(cat.todos)" id="list{{cat.id}}">
        </div>
      </div>
    </div>

  </div>
</div>

<script type="text/x-kendo-template" id="template">
  <div class="product">
  <div>
      <h2 class="text-center">{{dataItem.name}}</h2>
      <ul>
        <li ng-repeat="list in dataItem.list">
          <label class="checkbox">
            <input type="checkbox" ng-model="list.done">
            <span class="done-{{list.done}}">{{list.text}}</span>
          </label>
        </li>
     </ul>
  </div>
  </div>
</script>

<script type="text/ng-template" id="todo.html">

  <div class="k-widget"  >
   <div>
      <h2 class="text-center">{{dataItem.name}}</h2>
      <ul>
        <li ng-repeat="list in dataItem.list">
          <label class="checkbox">
            <input type="checkbox" ng-model="list.done">
            <span class="done-{{list.done}}">{{list.text}}</span>
          </label>
        </li>
     </ul>
  </div>
</div>


</script>
